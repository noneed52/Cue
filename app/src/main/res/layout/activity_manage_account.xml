<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="activity" type="com.test.cue.ManageAccountActivity"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.test.cue.ManageAccountActivity">
        <EditText
            android:id="@+id/contentTypeInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="10dp"
            android:hint="Content Type"
            android:singleLine="true"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <EditText
            android:id="@+id/callTimeInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:hint="Call Time"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@+id/contentTypeInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <EditText
            android:id="@+id/subscriptionTypeInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:hint="SubscriptionType"
            android:imeOptions="actionDone"
            app:layout_constraintTop_toBottomOf="@+id/callTimeInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/cardsRemainingText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Cards Remaining"
            app:layout_constraintTop_toBottomOf="@+id/subscriptionTypeInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>