<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="activity" type="com.test.cue.MyStatsActivity"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.test.cue.MyStatsActivity">
        <TextView
            android:id="@+id/scorecardDataText"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:minHeight="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Scorecard Data"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Button
            android:id="@+id/cueCardHistoryBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="20dp"
            android:text="Cue Card History"
            android:onClick="@{activity::onClickCueCardHistory}"
            app:layout_constraintTop_toBottomOf="@+id/scorecardDataText"
            app:layout_constraintLeft_toLeftOf="@+id/scorecardDataText"
            app:layout_constraintRight_toRightOf="@+id/scorecardDataText"/>
    </android.support.constraint.ConstraintLayout>
</layout>