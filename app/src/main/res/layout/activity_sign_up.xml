<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="activity" type="com.test.cue.SignUpActivity"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.test.cue.SignUpActivity">
        <EditText
            android:id="@+id/firstNameInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="20dp"
            android:hint="First Name"
            android:singleLine="true"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <EditText
            android:id="@+id/lastNameInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="10dp"
            android:hint="Last Name"
            android:singleLine="true"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@+id/firstNameInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <EditText
            android:id="@+id/mobileNumberInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="10dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@+id/lastNameInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@+id/mobileNumberInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            app:layout_constraintTop_toBottomOf="@+id/emailInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="20dp"
            android:text="Sign Up"
            android:onClick="@{activity::onClickSignUp}"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput"
            app:layout_constraintLeft_toLeftOf="@+id/passwordInput"
            app:layout_constraintRight_toRightOf="@+id/passwordInput"/>
    </android.support.constraint.ConstraintLayout>
</layout>