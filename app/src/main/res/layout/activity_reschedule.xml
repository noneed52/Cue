<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="activity" type="com.test.cue.RescheduleActivity"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.test.cue.RescheduleActivity">
        <EditText
            android:id="@+id/callTimeInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:singleLine="true"
            android:hint="Call Time"
            android:imeOptions="actionDone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Button
            android:id="@+id/rescheduleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="20dp"
            android:text="Reschedule"
            android:onClick="@{activity::onClickReschedule}"
            app:layout_constraintTop_toBottomOf="@+id/callTimeInput"
            app:layout_constraintLeft_toLeftOf="@+id/callTimeInput"
            app:layout_constraintRight_toRightOf="@+id/callTimeInput"/>
    </android.support.constraint.ConstraintLayout>
</layout>