<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="activity" type="com.test.cue.MainActivity"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.test.cue.MainActivity">
        <EditText
            android:id="@+id/idInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Id"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            app:layout_constraintTop_toBottomOf="@+id/idInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:onClick="@{activity::onClickLogin}"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput"
            app:layout_constraintLeft_toLeftOf="@+id/passwordInput"
            app:layout_constraintRight_toRightOf="@+id/passwordInput"/>
        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="20dp"
            android:text="Sign Up"
            android:onClick="@{activity::onClickSignUp}"
            app:layout_constraintTop_toBottomOf="@+id/loginBtn"
            app:layout_constraintLeft_toLeftOf="@+id/passwordInput"
            app:layout_constraintRight_toRightOf="@+id/passwordInput"/>

    </android.support.constraint.ConstraintLayout>
</layout>